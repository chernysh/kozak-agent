# URL моніторингу (WebSocket)
MONITORING_URL=ws://mock-monitoring:8765

# API ключ для авторизації
MONITORING_API_KEY=your-api-key-here

# Увімкнені модулі (через кому, без пробілів)
# Можливі: ssh, postgres, mysql, nginx, redis, systemd
ENABLED_MODULES=ssh

# --- SSH модуль ---
SSH_HOST=localhost
SSH_PORT=22
SSH_USER=root
# SSH_KEY_PATH=/path/to/key  # опційно, інакше password
# SSH_PASSWORD=secret        # опційно

# --- Postgres модуль (коли увімкнено) ---
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=monitor
# POSTGRES_PASSWORD=secret
# POSTGRES_DB=postgres

# --- MySQL модуль ---
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=monitor
# MYSQL_PASSWORD=secret
# MYSQL_DATABASE=mysql

# --- Nginx модуль ---
# NGINX_STATUS_URL=http://localhost/nginx_status

# --- Інтервал перевірок (секунди) ---
CHECK_INTERVAL=60
